@*inline width style*@
<div class="code" style="width: 678px">
    @*note: inline none-float style*@
    <div id="dual_columns_big_input" style="float: none;">
        @*note: inline margin style*@
        <h3 style="margin:0">
            添加任务
        </h3>
        <table>
            <tr>
                <th>
                    项目:
                </th>
                <td colspan="3">
                    <span id="linked_projects">
                        <select id="CurrentProject_Node" name="CurrentProject.Node" onchange="refreshProject(this);">
                            <option value="7">首顾科技</option>
                            <option value="38">test</option>
                        </select>    <span>>></span>
                        <select id="CurrentProject_Last" name="CurrentProject.Last" onchange="refreshProject(this);">
                            <option selected="selected" value="21">程序</option>
                            <option value="22">策划</option>
                        </select>
                    </span>
                    <span style="font-size: 12px;"><a href="#" id="previous_project" style="display: inline">&lt;&lt;上一级</a> <span id="separator" style="display: none">|</span> <a href="#" id="next_project" style="display: none">下一级&gt;&gt;</a> </span>
                    <input data-val="true" data-val-required="The SelectedProjectHasChild field is required." id="CurrentProject_SelectedProjectHasChild" name="CurrentProject.SelectedProjectHasChild" type="hidden" value="False" /><input data-val="true" data-val-required="The Id field is required." id="CurrentProject_TailSelectedProject_Id" name="CurrentProject.TailSelectedProject.Id" type="hidden" value="21" />
                </td>
            </tr>
            <tr>
                <th>
                    父任务:
                </th>
                <td colspan="3">
                    <input id="TaskItem_Parent_Id" name="TaskItem.Parent.Id" type="text" value="" /><span>(编号)</span><a href="#" id="find">查找</a><br />
                    <span class="field-validation-error" id="not_find" style="display: none">* 无法找到该编号的任务</span>
                </td>
            </tr>
            <tr>
                <th>
                    标题:
                </th>
                <td colspan="3">
                    <input class=" long_textbox" data-val="true" data-val-length="* 标题的长度不能大于255" data-val-length-max="255" data-val-required="* 标题不能为空" id="TaskItem_LiteItem_Title" name="TaskItem.LiteItem.Title" type="text" value="" /><br />
                    <span class="field-validation-valid" data-valmsg-for="TaskItem.LiteItem.Title" data-valmsg-replace="true"></span>
                </td>
            </tr>
            <tr>
                <th class="top_align">
                    内容:
                </th>
                <td class="textarea" colspan="3">
                    <textarea cols="20" id="TaskItem_Body" name="TaskItem.Body" rows="2"></textarea>
                </td>
            </tr>
            <tr>
                <th class="top_align">
                    附件:
                </th>
                <td class="textarea" colspan="3">
                    <div id="upload_files">
                        <input type="file" name="file" onchange="uploadChange(this)" />
                        <span class="reminder">（* 页面提交时上传文件）</span><a href="#" id="upload">继续上传</a><br />
                    </div>
                </td>
            </tr>
            <tr>
                <th>
                    难度:
