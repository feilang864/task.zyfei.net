@using FFLTask.GLB.Global.Enum
@model FFLTask.SRV.ViewModel.Task.ListModel
<tr>
    @for (int i = 0; i < Model.ShowColumns.Count; i++)
    {
        <th style="text-align: left">
            @if (Model.ShowColumns[i].Value == ListColumn.Title.ToString())
            {
                <input type="checkbox" checked="checked" disabled="disabled" />
                @Html.HiddenFor(m => m.ShowColumns[i].Selected)
            }
            else
            {
                @Html.CheckBoxFor(m => m.ShowColumns[i].Selected)
            }
            @Html.HiddenFor(m => m.ShowColumns[i].Value)
        </th>  
    }
</tr>
