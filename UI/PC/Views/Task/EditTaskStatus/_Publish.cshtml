@using FFLTask.GLB.Global.Enum
@model FFLTask.SRV.ViewModel.Task.EditModel
@if (Model.CurrentUser.Id == Model.TaskItem.Publisher.Id)
{
    if (Model.TaskItem.LiteItem.CurrentStatus.Stage == (int)Status.Publish
        || Model.TaskItem.LiteItem.CurrentStatus.Stage == (int)Status.Assign
        || Model.TaskItem.LiteItem.CurrentStatus.Stage == (int)Status.Own
        || Model.TaskItem.LiteItem.CurrentStatus.Stage == (int)Status.Doubt
        || Model.TaskItem.LiteItem.CurrentStatus.Stage == (int)Status.Update
        || Model.TaskItem.LiteItem.CurrentStatus.Stage == (int)Status.Quit)
    {
        @Html.EditorFor(m => m, "_Edit_Publish_Editable")
    }
    else
    {
        @Html.Partial("EditColumns/_Edit_Publish_Readonly", Model)            
    }
}
else
{
    @Html.Partial("EditColumns/_Edit_Publish_Readonly", Model)    
}
